<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History">

    <LinearLayout
        android:id="@+id/whereiam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="General"
            android:textColor="#FFFFFF"
            android:background="@drawable/butonnot"/>

        <Button
            android:id="@+id/route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Finding Route"
            android:background="@drawable/butonnot"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/History"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="History"
            android:background="@drawable/buttonhome"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/whereiam"
        >

        <TextView

            android:id="@+id/hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            />

        <TextView
            android:id="@+id/favfuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_whatshot_black_24dp"
            />

        <TextView
            android:id="@+id/avarage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_equalizer_black_24dp"

            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/information">
        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/which_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </Spinner>

            <EditText
                android:id="@+id/liter_howmuch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="18"
                android:inputType="number" />

        </LinearLayout>

        <Button

            android:id="@+id/push"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Push" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/add_history"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_weight="0.3">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_weight="0.3"
                >

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liter"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_weight="0.3">

            </TextView>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/anamenÃ¼"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"


            tools:context=".Anasayfa">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile" />


        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add for history" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Log Out" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>